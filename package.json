{
  "name": "react-card",
  "version": "1.0.2",
  "description": "Render a card with React",
  "main": "lib/Card.js",
  "peerDependencies": {
    "react": ">=0.13.3"
  },
  "devDependencies": {
    "babel": "^5.6.14",
    "babelify": "^6.1.2",
    "browserify": "^10.2.4",
    "cssnext": "^1.8.0",
    "index-card.css": "^1.0.1",
    "istanbul": "^0.3.17",
    "jshint": "^2.8.0",
    "mocha": "^2.2.5",
    "postcss-cli": "^1.3.1",
    "postcss-import": "^6.1.1",
    "postcss-nested": "^0.3.2",
    "react": "^0.13.3",
    "standard": "^4.5.1"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "test": "istanbul cover node_modules/.bin/_mocha -- -u exports --compilers js:babel/register,jsx:babel/register",
    "build": "babel src --out-dir lib",
    "build:demo:js": "browserify demo/demo.jsx > demo/demo.js --extension=.js --extension=.jsx",
    "build:demo:css": "postcss -u postcss-import -u postcss-nested -u cssnext -o demo/demo.css demo/demo.postcss && open demo/demo.html",
    "build:demo": "npm run build:demo:js && npm run build:demo:css",
    "demo": "npm run build:demo && open demo/index.html",
    "prepublish": "npm run build",
    "lint": "jshint src && jshint test && standard src && standard test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spudly/react-card.git"
  },
  "keywords": [
    "react",
    "component"
  ],
  "author": "Stephen Sorensen <shuoink@gmail.com> (http://www.stephenjohnsorensen.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spudly/react-card/issues"
  },
  "homepage": "https://github.com/spudly/react-card#readme",
  "dependencies": {
    "classnames": "^2.1.2"
  }
}
